@model Person
@{
    ViewData["Title"] = "Person Details";
}

<h1>Person Details</h1>
<div class="row font-weight-bold mt-3 d-flex-column align-items-lg-stretch">

    <div class="col-5 mt-2">Name</div>
    <div class="col-5 mt-2">PhoneNumber</div>
    <div class="col-2 mt-2">City</div>
</div>
<div class="row">
    <div class="col-5 mt-2">@Model.Name</div>
    <div class="col-5 mt-2">@Model.PhoneNumber</div>
    <div class="col-2 mt-2">@Model.CityName</div>
</div>



<a asp-action="People" class="btn btn-dark">Back to the list of people</a>
<br />
<a class="btn btn-primary mt-5" asp-controller="People" asp-action="Delete" asp-route-id="@Model.PersonId">Delete</a>

<a asp-action="Edit" asp-controller="People" asp-route-id="@Model.PersonId" class="btn btn-warning mt-5">Edit</a>